<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/btnInfomation"
        android:layout_width="111dp"
        android:layout_height="166dp"
        android:layout_marginEnd="49dp"
        android:drawableTop="@drawable/information"
        android:drawablePadding="18dip"
        android:paddingLeft="18dip"
        android:text="정보"
        android:textColor="#000000"
        android:textSize="50px"
        android:textStyle="bold"
        app:backgroundTint="#D2CBF33B"
        app:layout_constraintBottom_toTopOf="@+id/btnHostpital"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnCommunity"
        android:layout_width="190dp"
        android:layout_height="165dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="2dp"
        android:drawableTop="@drawable/people"
        android:drawablePadding="18dip"
        android:paddingLeft="18dip"
        android:text="커뮤니티"
        android:textColor="#000000"
        android:textSize="50px"
        android:textStyle="bold"
        app:backgroundTint="#DAF3E13B"
        app:layout_constraintBottom_toTopOf="@+id/btnHostpital"
        app:layout_constraintEnd_toStartOf="@+id/btnInfomation"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCalendar"
        android:layout_width="313dp"
        android:layout_height="90dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="46dp"
        android:drawableLeft="@drawable/calendar"
        android:drawablePadding="18dip"
        android:paddingLeft="50dip"
        android:text="캘린더"
        android:textColor="#000000"
        android:textSize="50px"
        android:textStyle="bold"
        app:backgroundTint="#77573BF3"
        app:layout_constraintBottom_toTopOf="@+id/grantDesBanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnHostpital"
        android:layout_width="313dp"
        android:layout_height="90dp"
        android:layout_marginStart="49dp"
        android:layout_marginEnd="49dp"
        android:drawableLeft="@drawable/hospital"
        android:drawablePadding="18dip"
        android:paddingLeft="50dip"
        android:text="산부인과"
        android:textColor="#000000"
        android:textSize="50px"
        android:textStyle="bold"
        app:backgroundTint="#683BE4F3"
        app:layout_constraintBottom_toTopOf="@+id/btnCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/grantDesBanner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/reg_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="98dp"
        android:layout_height="22dp"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/teengu_bottom" />

</androidx.constraintlayout.widget.ConstraintLayout>