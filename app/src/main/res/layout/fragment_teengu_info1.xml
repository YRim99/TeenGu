<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teenguInfoFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/grantDesBanner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#FFFFFF"
            android:scaleType="fitXY"
            android:src="@drawable/grant_des_banner"/>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <ImageButton
                android:id="@+id/grant_1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/grant_1"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <ImageButton
                android:id="@+id/grant_2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:src="@drawable/grant_2"
                android:background="#FFFFFF"
                android:scaleType="fitCenter"
                android:layout_marginEnd="15dp" />
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grant1Text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="한 눈에 보는 복지 정보\n미혼모·부 초기지원, 누가 받을 수 있나요?" />

            <TextView
                android:id="@+id/grant2Text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="대안교육위탁기관이란?\n청소년한부모가족의 학업중단 위기를 예방" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="지역별"
            android:textAllCaps="true"
            android:textColor="#040404"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/grantText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="경기도 - 청소년 한부모 자립지원" />

        <TextView
            android:id="@+id/grantText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="광주광역시 - 청소년 산모 임신 출산 의료비 지원" />

        <TextView
            android:id="@+id/grantText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="춘천시 - 청소년 한부모 자립지원사업" />

        <TextView
            android:id="@+id/grantText4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="세종시 - 한부모가족지원사업" />

        <TextView
            android:id="@+id/grantText5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="춘천시 - 저소득 한부모 가정지원" />

        <TextView
            android:id="@+id/grantText6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="성남시 수정구 - 한부모가족 복지" />

        <TextView
            android:id="@+id/grantText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="안산시 - 2021년 한부모가족 복지급여 지원 확대 홍보" />

        <TextView
            android:id="@+id/grantText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="성주군 - 한부모 가족지원" />

    </LinearLayout>

</ScrollView>